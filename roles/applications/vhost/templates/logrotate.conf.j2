# {{ ansible_managed }}

{% if 'vhost' in vhost.logs %}

{{ vhost.logs.vhost }}*.log {
  create 660 www-data applications
  weekly
  missingok
  rotate 52
  copytruncate
  compress
  delaycompress
  notifempty
  nomail
}

{% endif %}
{% if 'app' in vhost.logs %}

{{ vhost.logs.app }}*.log {
  create 660 {{ vhost.owner.name }} applications
  weekly
  missingok
  rotate 52
  copytruncate
  compress
  delaycompress
  notifempty
  nomail
}

{% endif %}
